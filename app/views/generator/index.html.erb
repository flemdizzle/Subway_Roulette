<% array = [] %>
<!-- Meat Chooser -->
<% if rand(5) > 0 %>
	<%= chooser(Meat).meat %><br>on<br>
<% else %>
	<%= nil %>
<% end %>
<!-- Bread Chooser -->
<%= chooser(Bread).bread %><br>
with<br>
<!-- Cheese Chooser -->
<% rand(3).times do %>
	<% array << chooser(Cheese).cheese %>
<% end %>
<!-- Vegetable Chooser -->
<% rand(10).times do %>
	<% array << chooser(Vegetables).vegetables %>
<% end %>
<!-- Toppings Chooser -->
<% rand(5).times do %>
	<% array << chooser(Toppings).toppings %>
<% end %>

<!-- Sentence Creator -->
<% ingredientAry = [] %>
<% used = [] %>
<% array.each do |ingredient| %>
	<% if ingredientAry.include? ingredient %>
		<% ingredientAry.map! {|x| x == ingredient ? "Double #{ingredient}" : x } %>
		<% used << ingredient %>
	<% elsif used.include? ingredient %>
		<% nil %>
	<% else %>
		<% ingredientAry << ingredient %>
	<% end %>
<% end %>
<%= ingredientAry.uniq.to_sentence %>
