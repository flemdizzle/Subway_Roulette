<% array = [] %>
<!-- Meat Chooser -->
<% if rand(5) > 0 %>
	<%= counter(Meat) %><br>on<br>
<% else %>
	<%= nil %>
<% end %>
<!-- Bread Chooser -->
<%= counter(Bread) %><br>
with<br>
<!-- Cheese Chooser -->
<% array << counter(Cheese,3) %>
<!-- Vegetable Chooser -->
<% array << counter(Vegetables,10)%>
<!-- Toppings Chooser -->
<% array << counter(Toppings,5)%>
<!-- "Double" Generator -->
<% ingredientAry = [] %>
<% used = [] %>
<% array.each do |ingredient| %>
	<% if ingredientAry.include? ingredient %>
		<% ingredientAry.map! {|x| x == ingredient ? "Double #{ingredient}" : x } %>
		<% used << ingredient %>
	<% elsif used.include? ingredient %>
		<% nil %>
	<% else %>
		<% ingredientAry << ingredient %>
	<% end %>
<% end %> 
<!-- Sentence Creator -->
<%= ingredientAry.uniq.to_sentence %>
